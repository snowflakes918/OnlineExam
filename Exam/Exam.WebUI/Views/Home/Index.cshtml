@model LoginVM
@{
    ViewData["Title"] = "Giriş Ekranı";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center form-center">
        <section class="login-form">
            <form asp-action="index" id="form1" class="form-horizontal align-content-center" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-md-12 center-block">
                    <h3>KULLANICI GİRİŞ</h3>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input asp-for="username" id="username" name="username" placeholder="Kullanıcı Adı" required oninvalid="this.setCustomValidity('Lütfen Kullanıcı Adı Giriniz')" oninput="setCustomValidity('')" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input asp-for="password" id="password" name="password" placeholder="Şifre" required oninvalid="this.setCustomValidity('Lütfen Şifre Giriniz')" oninput="setCustomValidity('')" />
                    </div>
                </div>
                <div>
                    <button type="submit" class="col-md-12 btn" id="btnlogin">Giriş Yap</button>
                </div>
            </form>
            <div class="row"> <p>@ViewBag.LoginError</p></div>

        </section>
    </div>
</div>